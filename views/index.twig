{% extends '/layout/MainLayout.twig' %}

{% block css_extra %}
    <style>
      .imageClick:hover {
          cursor: pointer;
      }

      .imageClick:not(:hover) {
          cursor: default;
      }

      .carousel-control {
          width: 7%;
      }
      .carousel-control.right{
        background-image:none;
      }
      .carousel-control.left{
        background-image:none;
      }
      #logo-top-page{
        background: url('/images/fice.png') no-repeat center;
        background-position:center;
        background-size: auto 256px;
        min-height:256px;
      }

      #float-rigth-menu{
        float: right;
      }

    </style>
{% endblock %}

{% block content %}

  <div id="logo-top-page">
      <div id="float-rigth-menu">
        <div>
          <a href="/impressa">
              <i class="fa fa-newspaper-o" aria-hidden="true"></i>
              Impressa
          </a>
        </div>
        <div>
          <a href="https://www.facebook.com/fice2017/">
              <i class="fa fa-facebook-official" aria-hidden="true"></i>
              Facebook
          </a>
        </div>
        <div>
          <a href="https://vimeo.com/user54894477">
              <i class="fa fa-vimeo" aria-hidden="true"></i>
              Vimeo
          </a>
        </div>
      </div>
  </div>
  <div id="carousel" style="margin-top: 20px">
      <div id="programacao" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
              <li data-target="#programacao" data-slide-to="0" class="active"></li>
              <li data-target="#programacao" data-slide-to="1"></li>
              <li data-target="#programacao" data-slide-to="2"></li>
              <li data-target="#programacao" data-slide-to="3"></li>
              <li data-target="#programacao" data-slide-to="4"></li>
              <li data-target="#programacao" data-slide-to="5"></li>
              <li data-target="#programacao" data-slide-to="6"></li>
              <li data-target="#programacao" data-slide-to="7"></li>
              <li data-target="#programacao" data-slide-to="8"></li>
              <li data-target="#programacao" data-slide-to="9"></li>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/BIRDS.jpg"
                       onclick="location.href='programacao/birds'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/DANCA.jpg"
                       onclick="location.href='programacao/danca'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/KK.jpg"
                       onclick="location.href='programacao/kardashian'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/MEDELEI.jpg"
                       onclick="location.href='programacao/medelei'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/PIRANHA.jpg"
                       onclick="location.href='programacao/piranha'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/SIRENS.jpg"
                       onclick="location.href='programacao/the-sirens'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/SUELY.jpg"
                       onclick="location.href='programacao/suely'" style="height:350px"/>
              </div>

              <div class="item active">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/RICARDO.jpg"
                       onclick="location.href='programacao/ricardo'" style="height:350px"/>
              </div>

              <div class="item">
                  <img type="image/jpg" class="img-responsive center-block imageClick" src="/images/carousel/EXTRA1.jpg"
                       onclick="location.href='contexto'" style="height:350px"/>
              </div>
          </div>
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#programacao" role="button" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
              <span class="sr-only">Anterior</span>
          </a>
          <a class="right carousel-control" href="#programacao" role="button" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
              <span class="sr-only">Pr√≥ximo</span>
          </a>
      </div>
  </div>
  <div id=video>
      <div id="vimeovideowrapper" style="width: 100%;height: 352px;margin-bottom: 20px;">
          <p style="text-align:center;width: 100%;height: 100%;">
              <iframe src='http://player.vimeo.com/video/204119952?title=0&byline=0&portrait=0' frameborder='0'
                      style="max-width:640px;max-height:352px;height: 100%;width: 100%;" webkitAllowFullScreen
                      mozallowfullscreen allowFullScreen></iframe>
          </p>
      </div>
  </div>
{% endblock %}

{% block js_extra %}
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
{% endblock %}
